def tempinput(temps):
  temp_input=input("\nEnter a temperature: \n")
  if temp_input!="Done":
    temps.append(float(temp_input))
    tempinput(temps)
  else :
    return temps

def largetemp(temps):
  temps.sort()
  temps.reverse()
  return temps[0]

def smalltemp(temps):
  temps.sort()
  return temps[0]

def tempcount(temps):
  count=len(temps)
  return count

temps=[]

print("\nWelcome!\nEnter \"Done\" after final temperature entry.\n")

while True:
  try:
    tempinput(temps)
    print("\nLargest Temp: ",largetemp(temps))
    print("Smallest Temp: ",smalltemp(temps))
    print("Number of temperatures entered: ",tempcount(temps))
    print("\n")
  except ValueError:
    print("\nPlease enter a number or \"Done\"")
  else:
    break
