import requests
import json

def print_joke(url): 
  response=requests.request("GET",url)
  line=(response.text)
  info = json.loads(line)

  print("\n%s" % info['value'])


  return 


def main():
  
  print("Welcome to the Chuck Norris Joke Generator!")

  url='https://api.chucknorris.io/jokes/random'
  
  print_joke(url)
 

  while True:
    try:
      choice=str(input("\nWould you like a new joke (Yes or No):"))
    except ValueError:
      print("Invalid input")
    if choice.lower()=="yes":
      print_joke(url)
    if choice.lower()=="no":
      print("\nExiting Chuck Norris Joke Generator!")
      break
    else:
      print ("Else")
      print("Invalid input")
 

main()
