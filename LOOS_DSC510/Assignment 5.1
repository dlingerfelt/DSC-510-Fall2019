# Function to receive numbers
def getnum():
  while True:
    try:
      num1=float(input("\nEnter first number: "))
      num2=float(input("Enter second number: "))  
      return num1,num2
    except ValueError:
      print("\nInvalid input!") 
    else:
      break

# Function to calculate based on operation passed
def performCalculation(operation):
  if operation=="+":
    nums=getnum()   
    output=nums[0]+nums[1]
  elif operation=="-":
    nums=getnum()   
    output=nums[0]-nums[1]
  elif operation=="*":
    nums=getnum()   
    output=nums[0]*nums[1]
  elif operation=="/":
    nums=getnum()   
    output=nums[0]/nums[1]
  else:
      print("\nInvalid operation. Returning to main menu.\n")
      return 

  print (nums[0],operation,nums[1],"=",output)
  return

