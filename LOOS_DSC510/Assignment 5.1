# Function to calculate based on operation passed
def performCalculation(operation):
  num1=int(input("\nEnter first number: "))
  num2=int(input("\nEnter second number: "))

  if operation=="+":
    output=num1+num2
  elif operation=="-":
    output=num1-num2
  elif operation=="*":
    output=num1*num2
  elif operation=="/":
    output=num1/num2
  else:
      print("\nInvalid operation. Returning to main menu.\n")
      return 

  print (num1,operation,num2,"=",output)
  return

